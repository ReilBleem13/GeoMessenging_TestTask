FROM golang:1.25-alpine AS builder

WORKDIR /build
COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 \
    go build \
    -a \
    -tags netgo,osusergo \
    -ldflags="-s -w" \
    -o /app/webhook ./cmd/webhook/main.go

FROM scratch

WORKDIR /app
COPY --from=builder /app/webhook /app/webhook

EXPOSE 9090
CMD ["/app/webhook"]

